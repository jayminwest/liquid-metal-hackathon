{
  "name": "liquid-metal-hackathon",
  "version": "0.1.0",
  "description": "Personalized knowledge graph system with basic-memory + Raindrop MCP",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:api\" \"bun run dev:ui\"",
    "dev:api": "bun run --watch api/server.ts",
    "dev:ui": "cd interaction && bun run dev",
    "build": "bun run build:ui && bun run typecheck",
    "build:ui": "cd interaction && bun run build",
    "start": "bun run api/server.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit && cd interaction && bun run typecheck",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "openai": "^6.8.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
